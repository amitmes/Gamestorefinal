<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>@ViewData["Title"] - Gamestorefinal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/home.css" />
    <link rel="stylesheet" href="~/css/weather.css" />





</head>
<body class="body">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: black;">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white btn" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn text-white btn" asp-area="" asp-controller="Games" asp-action="Index">Games</a>
                        </li>
                        <li class=" nav-item">
                            <div class="btn-group">
                                <a class=" nav-link btn text-white btn" asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
                                <button type="button" class="btn dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <div class="dropdown-menu btn">
                                    @*@foreach (var item in Model)
                    {
                    <a class="dropdown-item" href="">@item.Name</a>
                    }*@

                                    @*@foreach (var cat in ViewBag.Category)
                    {
                        <a class="dropdown-item" href="@cat.Name"></a>

                    }*@

                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn text-white btn" asp-area="" asp-controller="Home" asp-action="Cart">Cart</a>
                        </li>

                        @if (Context.User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link btn text-white btn" asp-area="" asp-controller="Home" asp-action="Graphs">Graphs</a>
                            </li>
                        }

                        @if (Context.User != null && Context.User.Claims != null && Context.User.Claims.Count() > 0)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white btn" asp-area="" asp-controller="Clients" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white btn" asp-area="" asp-controller="Clients" asp-action="Login">Login</a>
                            </li>
                        }


                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted" style="background-color: black; position: fixed; padding: 10px 10px 0px 10px; bottom: 0; width: 100%; ">
            <div class="container">
                &copy; 2021 - Gamestorefinal - <a class="text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                                <a class="text-white" asp-area="" asp-controller="Home" asp-action="About">About</a>
            </div>
        </footer>*@
    <div class="main-footer">

        <div class="footer-content col-12">

            <div class="footer-section about">
                <h1 class="logo-text"><span>Our</span>web</h1>
                <p>information on our website</p>
                <div class="contact">
                    <span><i class="fas fa-phone"></i>&nbsp;050-456-345</span>
                    <span><i class="fas fa-envelope"></i>&nbsp;GameStoreMGSK@gmail.com</span>
                </div>

                <div class="socials">
                    <a href="https://www.facebook.com/Game-Store-102173372199002" class="facebook" style="border-color: transparent;"><img src="~/css/Pictures/facebook.png" height="40" width="40"></a>
                    <a href="https://twitter.com/GameStore2021" class="twitter" style="border-color: transparent;"><img src="~/css/Pictures/twitter.png" height="40" width="40"></a>
                </div>
            </div>

            <div class="footer-section links ">
                <h2> Quick links </h2>
                <br />
                <ul>
                    <a class="text-white" asp-controller="Home" asp-action="About"><li>About</li></a>
                    <a class="text-white" asp-controller="Home" asp-action="Team"><li>Team</li></a>
                    <a href="#"><li>Mentores</li></a>
                    <a href="#"><li>Gallery</li></a>
                    <a class="text-white" asp-controller="Home" asp-action="TermsAndConditions"><li>Terms and Conditions</li></a>
                </ul>
            </div>
