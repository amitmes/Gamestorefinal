@model GamesStore.Models.Locations
<!DOCTYPE html>
@{
    ViewData["Title"] = "About Page";
}


<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/about-style.css" />
    <link rel="stylesheet" href="~/css/weather.css" />


</head>
<body class="about">

    <div class="section">
        <h1>About Us </h1>
        <p>We are a young talented team with a lot of inspiration.</p>
        <p>The obvious objective of video games is to entertain people by surprising them with new experiences.</p>
    </div>
    <div class="col-lg-3 office-info">

        <h3>Our Office Location</h3>
        <p>Yagur 16, Tel Aviv-Yafo</p>
        <p> Sunday to Thursday - 10:00- 16:00</p>
        <p>Friday and Saturday Close</p>



        <div class="text-center" id="map" style="height:500px; width:700px;"></div>
        <div>
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create" asp-controller="Locations">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Adress_name" class="control-label"></label>
                            <input asp-for="Adress_name" class="form-control" />
                            <span asp-validation-for="Adress_name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Cor_x" class="control-label"></label>
                            <input asp-for="Cor_x" class="form-control" />
                            <span asp-validation-for="Cor_x" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Cor_y" class="control-label"></label>
                            <input asp-for="Cor_y" class="form-control" />
                            <span asp-validation-for="Cor_y" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>

